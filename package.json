{
	"name": "some-sass",
	"displayName": "Some Sass",
	"description": "Autocompletion, refactoring, and documentation support for SCSS",
	"version": "1.0.0",
	"publisher": "SomewhatStationery",
	"license": "MIT",
	"engines": {
		"vscode": "^1.66.0"
	},
	"icon": "icon.png",
	"homepage": "https://github.com/wkillerud/vscode-scss/blob/main/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/wkillerud/vscode-scss"
	},
	"keywords": [
		"scss",
		"sassdoc",
		"autocompletion",
		"intellisense",
		"refactor"
	],
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:scss",
		"onLanguage:vue",
		"onLanguage:svelte"
	],
	"main": "./dist/client.js",
	"contributes": {
		"configuration": {
			"properties": {
				"somesass.scannerDepth": {
					"type": "number",
					"default": 30,
					"description": "The maximum number of nested directories to scan."
				},
				"somesass.scannerExclude": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"**/.git",
						"**/node_modules",
						"**/bower_components"
					],
					"description": "List of glob patterns for directories that are excluded when scanning."
				},
				"somesass.scanImportedFiles": {
					"type": "boolean",
					"default": true,
					"description": "Allows scan imported files."
				},
				"somesass.implicitlyLabel": {
					"type": [
						"string",
						"null"
					],
					"default": "(implicitly)",
					"description": "The text of a label that the file imported implicitly. If `null` then label not displayed."
				},
				"somesass.showErrors": {
					"type": "boolean",
					"default": false,
					"description": "Allows to display errors."
				},
				"somesass.suggestVariables": {
					"type": "boolean",
					"default": true,
					"description": "Allows prompt Variables."
				},
				"somesass.suggestMixins": {
					"type": "boolean",
					"default": true,
					"description": "Allows prompt Mixins."
				},
				"somesass.suggestFunctions": {
					"type": "boolean",
					"default": true,
					"description": "Allows prompt Functions."
				},
				"somesass.suggestFunctionsInStringContextAfterSymbols": {
					"type": "string",
					"default": " (+-*%",
					"description": "Allows prompt Functions in String context after specified symbols."
				}
			}
		}
	},
	"devDependencies": {
		"@nodelib/fs.macchiato": "1.0.4",
		"@types/color": "3.0.3",
		"@types/color-name": "1.1.1",
		"@types/mocha": "9.1.1",
		"@types/node": "17.0.33",
		"@types/sinon": "10.0.11",
		"@types/vscode": "1.66.0",
		"@vscode/test-electron": "2.1.3",
		"eslint": "8.15.0",
		"eslint-config-mrmlnc": "2.1.0",
		"mocha": "10.0.0",
		"rimraf": "3.0.2",
		"sinon": "14.0.0",
		"ts-loader": "9.3.0",
		"typescript": "4.6.4",
		"webpack": "5.72.1",
		"webpack-cli": "4.9.2"
	},
	"dependencies": {
		"color": "4.2.3",
		"color-name": "1.1.4",
		"fast-glob": "3.2.11",
		"scss-sassdoc-parser": "1.0.1",
		"scss-symbols-parser": "2.0.1",
		"vscode-css-languageservice": "5.4.2",
		"vscode-languageclient": "8.0.1",
		"vscode-languageserver": "8.0.1",
		"vscode-languageserver-textdocument": "1.0.4",
		"vscode-languageserver-types": "3.17.1",
		"vscode-uri": "3.0.3"
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint \"src/**/*.ts\" --cache",
		"test": "npm run webpack && npm run test:clean && npm run test:compile && npm run test:unit && npm run test:e2e",
		"test:clean": "rimraf out",
		"test:compile": "tsc -p ./",
		"test:unit": "mocha \"out/**/*.spec.js\"",
		"test:e2e": "node ./out/unsafe/test/e2e/runTest.js"
	},
	"__metadata": {
		"id": "6d35099c-3671-464c-ac0b-34a0c3823927",
		"publisherDisplayName": "Somewhat Stationery",
		"publisherId": "02638283-c13a-4acf-9f26-24bdcfdfce24",
		"isPreReleaseVersion": false
	}
}
